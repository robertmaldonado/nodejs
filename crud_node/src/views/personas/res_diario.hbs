<div class="container mt-4">
    <h4 class="mb-3">Resumen de ingresos diarios</h4>

    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>Día</th>
                <th>Yappy-R</th>
                <th>Yappy-M</th>
                <th>ACH</th>
                <th>Efectivo</th>
                <th>Total Día</th>
                <th>facturado</th>
            </tr>
        </thead>
        <tbody>
            {{#each resumen}}
            <tr>
                <td>{{dia}}</td>
                <td>${{total_yappyr}}</td>
                <td>${{total_yappym}}</td>
                <td>${{total_ach}}</td>
                <td>${{total_efectivo}}</td>
                <td><strong>${{total_dia}}</strong></td>
                <td><strong>${{total_factura}}</strong></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>